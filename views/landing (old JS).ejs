<script>
    let btns = document.querySelectorAll('button')
    let items = document.querySelector('ul')

    btns.forEach( btn => {
        btn.addEventListener('click', ()=>{
            let x = document.createElement('li')
            x.innerText = btn.value
            items.append(x)

            x.addEventListener('dblclick', ()=>{
                items.removeChild(x)
            }) 
        }) 


    })



</script>